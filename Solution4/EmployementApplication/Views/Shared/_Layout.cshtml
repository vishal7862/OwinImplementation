<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -EmployementManagement</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
   
        
    <div id="MainBody">

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                   @Html.ActionLink("EmployementManagement", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" ,@id="indexhome"})
                    
                    <!-- <a href="/#Home" id="HomeLink" class="navbar-brand">EmployementManagement</a>-->
                </div>
                @if (Request.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">

                            <li><a href="#Employees" id="EmpLink">Employees</a></li>
                            <li><a href="#Departments" id="DeptLink">Departments</a></li>
                            <li><a href="/Home/Logout" id="LogoutLink">Logout</a></li>

                        </ul>
                    </div>
                }
                else
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">

                            <li><a href="/#Register" id="RegisterLink">Register</a></li>
                            <li><a style="color:aqua" href="/#Login" path="/Home/Login" id="LoginLink">Login</a></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
